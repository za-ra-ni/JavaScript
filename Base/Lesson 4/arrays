var arr11_2 = [4,5,6, 7, 8];
var length;
var arr11new = [];
arr11_1.length < arr11_2.length ? length = arr11_1.length : length = arr11_2.length;
for (i = 0; i < length; i++) {
    arr11new.push(arr11_1[i] + arr11_2[i]);
}
console.log(arr11new);

//Task 12
var arr12 = [1,2,3,4,3,3];
function deleteFromArray(arr, x) {
    for (var i = 0; i < arr.length; i++) {
        if (arr[i] == x) {
            arr.splice(i, 1);
            i--;
        };
    };
    return arr;
};

//Task 13
function intersection(x, y, z){
    var arrI = [];
    for (a = 0; a < x.length; a++) {
        for (b = 0; b < y.length; b++) {
            for (c = 0; c < z.length; c++) {
                if (x[a] == y[b] == z[c]) {
                    arrI.push(x[a]);
                }
            }
        }
    }
    return arrI;
}

intersection([1, 2, 3], [101, 2, 1, 10], [2, 1])

//Task 14
function growArray(arr, x){
    for (var i = arr.length; i < x; i++) {
        arr[i] = 0;
    };
    return arr;
};

growArray([1,2,3], 6)

