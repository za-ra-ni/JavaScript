for (a = 0; a <= 100; a++) {
    if (a % 2 == 0) {
        result += a;
    };
};
console.log(result);

//Task 6
function callMe(x, y, z) {
    var result = x + y + z;
    if (typeof(x) !== "number" || typeof(y) !== "number" || typeof(y) !== "number") {
        console.error("Please enter three numbers!");
        return null;
    };
    return result;
};
callMe(1,2,3);

