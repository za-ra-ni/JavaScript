//Task 9
var arr9 = [13, 35, 3, 443];
var arr9new = arr9.join("").split("");
var count = 0;
for (i = 0; i < arr9new.length; i++) {
    if (arr9new[i] == 3) {
        count++;
    };
};
console.log(count);

//Task 10
var arr10 = ['1', '2', '3', '4', '5', '6'];
var a;
var z;
var arr10new = [];
for (a = 0, z = arr10.length-1; a < arr10.length / 2, z >= arr10.length / 2; a++, z--){
    var newElement = `${arr10[a]}${arr10[z]}`;
    arr10new.push(newElement);
}
var arr10str = arr10new.join("-");
console.log(arr10str);

//Task 11
