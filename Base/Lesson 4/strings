//Task 1
var str = 'aaa@bbb@ccc';
var strNew = str.replace(/@/g, "!")
console.log(strNew);

//Task 2
var str2 = 'aaa bbb ccc';
var srt2New = str2.substr(4,3);
console.log(srt2New);
//OR
var srt2New = str2.substring(4,7);
console.log(srt2New);
//OR
var srt2New = str2.slice(4,7);
console.log(srt2New);

// Task 3
var date = '2025-12-31';
var dateSlash = date.split("-").reverse().join("/");
console.log(dateSlash);

