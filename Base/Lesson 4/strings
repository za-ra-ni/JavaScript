//Task 9
var str9 = 'я учу javascript!';
var str9UC = str9.replace(str9.charAt(0), str9.charAt(0).toUpperCase());
console.log(str9UC);

//Task 10
var str10 = 'я учу javascript!';
var str10arr = str10.split(" ");
for (var i = 0; i < str10arr.length; i++) {
    str10arr[i] = str10arr[i].replace(str10arr[i].charAt(0), str10arr[i].charAt(0).toUpperCase());
    };
var str10UC = str10arr.join(" ");
console.log(str10UC);

//Task 11
function underscoreToUC(str11) {
    var str11arr = str11.split("_");
    for (var i = 0; i < str11arr.length; i++) {
        str11arr[i] = str11arr[i].replace(str11arr[i].charAt(0), str11arr[i].charAt(0).toUpperCase());
    };
    var str11UC = str11arr.join("");
    return str11UC;
};
console.log(underscoreToUC('var_test_text'));

