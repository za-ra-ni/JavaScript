OR
var lang = prompt("What is you language: ru, en or de?");
var arr = [];
var weekdays = [
    ["понедельник", "вторник", "среда", "четверг", "пятница", "суббота", "воскресенье"],
    ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"],
    ["Montag", "Dienstag", "Mittwoch", "Donnerstag", "Freitag", "Samstag", "Sonntag"]
];
if (lang == "ru") {
    console.log(arr = weekdays[0]);
} else if (lang == "en") {
    console.log(arr = weekdays[1]);
} else if (lang == "de") {
    console.log(arr = weekdays[2]);
} else {
    alert('That language is not supported');
};
