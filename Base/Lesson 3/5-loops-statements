//Task 1
for (a = 0; a <= 15; a++) {
    a % 2 === 0 ? console.log(`${a} is even`) : console.log(`${a} is odd`);
};

//Task 2
for (a = 1; a <= 100; a++) {
    console.log(a);
    if (a % 3 == 0 && a % 5 == 0) {
        console.log("FizzBuzz");
    } else if (a % 3 == 0) {
        console.log("Fizz");
    } else if (a % 5 == 0) {
        console.log("Buzz");
    };
};

